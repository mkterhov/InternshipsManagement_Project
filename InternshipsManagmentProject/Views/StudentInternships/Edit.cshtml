@model InternshipsManagmentProject.Data.StudentInternship

@{
    ViewBag.Title = "Student Internship";
}
<link href="~/Content/Student.css" rel="stylesheet" />

@if (Model != null)
{
    <div><img class="profile_pic img-circle" src="@Url.Content("~/Content/Images/" + @Model.Student.AspNetUser.Image.Name)" alt="Profile Photo" /></div>
    if (Model.Student.Name != null && Model.Student.LastName != null)
    {
        <h4>@Model.Student.Name @Model.Student.LastName</h4>
    }
    if (Model.Student.University != null)
    {
        <div>Universitate: @Model.Student.University</div>
    }
    if (Model.Student.LevelOfStudies != null)
    {
        <div>Nivel de Studii: @Model.Student.LevelOfStudies</div>
    }
    if (Model.Student.Domain != null)
    {
        <div>Domeniu: @Model.Student.Domain</div>
    }
    if (Model.Student.Bio != null)
    {
        <div>Bio: @Model.Student.Bio</div>
    }

}

<br />
<br />
@if (Model.Student.Resume != null)
{
    <a href="@Url.Content("~/Content/Images/")@Model.Resume.Name">See the Resume</a>
}
else
{
    <div>Studentul nu a trimis CV.</div>
}


<br />
<br />

@if (Model.Stage == "0")
{
    <div>@Html.ActionLink("Verifica CV", "Edit", "StudentInternships", new { id = Model.StudentId, id2 = Model.InternshipId, newStage = "1" }, new { @class = "btn primary" })</div>
}
else if (Model.Stage == "1")
{
    <div>@Html.ActionLink("Accepta", "Edit", "StudentInternships", new { id = Model.StudentId, id2 = Model.InternshipId, newStage = "2" }, new { @class = "btn primary" })</div>
    <div>@Html.ActionLink("Refuza", "Edit", "StudentInternships", new { id = Model.StudentId, id2 = Model.InternshipId, newStage = "rejected" }, new { @class = "btn primary" })</div>
}
else if (Model.Stage == "2")
{
    <div>Asteptare raspuns student.</div>
}
else if (Model.Stage == "3")
{
    <div>Internship-ul se intampla.</div>
    <div>@Html.ActionLink("Termina Internship", "Edit", "StudentInternships", new { id = Model.StudentId, id2 = Model.InternshipId, newStage = "4" }, new { @class = "btn primary" })</div>
}
else if (Model.Stage == "4")
{
    <div>Studentul a terminat.</div>
}
else if (Model.Stage == "done")
{
    <div>Studentul a dat Rating.</div>
}
else if (Model.Stage == "rejected")
{
    <div>Studentul a fost respins.</div>
}
else if (Model.Stage == "refused")
{
    <div>Studentul a declinat oferta.</div>
}

<div>
    @Html.ActionLink("Inapoi la Aplicanti", "Index", "StudentInternships", new { id = Model.InternshipId }, new { @class = "btn btn-primary" })
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
