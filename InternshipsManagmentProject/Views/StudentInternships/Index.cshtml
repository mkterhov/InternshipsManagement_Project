@model IEnumerable<InternshipsManagmentProject.Data.StudentInternship>

@{
    ViewBag.Title = "Aplicari";
}

@if (Model != null && Model.First() != null)
{
    <h2>@Model.First().Internship.Title</h2>
}
else
{
    <h2>Nimic</h2>
}



<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Student.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Student.LastName)
        </th>
        <th>
            Rezolva
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Student.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Student.LastName)
            </td>
            <td>
                @Html.ActionLink("Rezolva", "Edit", new { id = item.StudentId, id2 = item.InternshipId })
            </td>
        </tr>
    }

</table>
@Html.ActionLink("Inapoi la Home", "Index", "Home", null, new { @class = "btn btn-primary" })
