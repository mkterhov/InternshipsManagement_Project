@model InternshipsManagmentProject.Data.StudentInternship

@{
    ViewBag.Title = "Aplica la internship";
}

<h2>Aplica la internship</h2>


@using (Html.BeginForm("Create", "StudentInternships", FormMethod.Post, new { @class = "form_student", @id = "studentform", role = "form", enctype = "multipart/form-data" })) 
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(model => model.SubmitedResume, "SubmitedResume", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @*@Html.EditorFor("SubmitedResume", new { htmlAttributes = new { @class = "form-control" } } )*@
            <input name="SubmitedResume" id="submited_resume" type="file" class="form-control" />
            @Html.ValidationMessageFor(model => model.SubmitedResume, "", new { @class = "text-danger" })
        </div>
        <br />
        @Html.LabelFor(model => model.Updates, "Updates", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @*@Html.EditorFor("Updates", new { htmlAttributes = new { @class = "form-control" } } )*@
            <input name="Updates" id="Updates" type="text" class="form-control" />
            @Html.ValidationMessageFor(model => model.SubmitedResume, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Apply!" class="btn btn-default" />
        </div>
    </div>
</div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
